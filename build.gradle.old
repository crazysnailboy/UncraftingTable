buildscript {
    repositories {
        jcenter()
        maven { url = "http://files.minecraftforge.net/maven" }
    }
    dependencies {
        classpath 'net.minecraftforge.gradle:ForgeGradle:2.3-SNAPSHOT'
    }
}
apply plugin: 'net.minecraftforge.gradle.forge'


version = "1.8-beta6"
group = "org.jglrxavpok.mods.decraft"
archivesBaseName = "[1.12]UncraftingTable"

sourceCompatibility = targetCompatibility = '1.8' // Need this here so eclipse task generates correctly.
compileJava {
    sourceCompatibility = targetCompatibility = '1.8'
}

minecraft {
    version = "1.12-14.21.1.2387"
    runDir = "run"
    mappings = "snapshot_20170629"
    makeObfSourceJar = false

    replace "\${version}", project.version
    replaceIn "ModUncrafting.java"
}

repositories {
    maven {
        name = "jared maven"
        url "http://blamejared.com/maven"
    }
}

dependencies {
	deobfCompile 'CraftTweaker2:CraftTweaker2-API:4.0.0.7'
	deobfCompile 'CraftTweaker2:CraftTweaker2-MC1120-Main:1.12-4.0.0.7'
}

processResources {

    inputs.property "version", project.version
    inputs.property "mcversion", project.minecraft.version

    from(sourceSets.main.resources.srcDirs) {
        include 'mcmod.info'
        expand 'version':project.version, 'mcversion':project.minecraft.version
    }
        
    from(sourceSets.main.resources.srcDirs) {
        exclude 'mcmod.info'
    }
}
